<section
  id=courseware
  class="view-student{{#user_may_author}} user-may-author{{/user_may_author}} loading"
  data-blockid="{{courseware.id}}"
  data-type=Courseware>

  <nav class="breadcrumb">
    <ul>
      {{#active_chapter}}
        <li><span>{{#titleize}}{{title}}{{/titleize}}</span></li>
      {{/active_chapter}}
      {{#active_subchapter}}
        <li> <span class="breadcrumb-subchapter">{{#titleize}}{{title}}{{/titleize}}</span></li>
      {{/active_subchapter}}
    </ul>
  </nav>

  <aside>
    <ol class=chapters>

      {{#chapters}}
        {{> chapter}}
      {{/chapters}}

      <li class=no-content>{{#i18n}}Keine Kapitel{{/i18n}}</li>
      <li class=controls>
        <button class=add-chapter>{{#i18n}}Kapitel einfügen{{/i18n}}</button>
        <button class=init-sort-chapter>{{#i18n}}Kapitel sortieren{{/i18n}}</button>
        <button class=stop-sort-chapter>{{#i18n}}Sortieren abschließen{{/i18n}}</button>
        {{^active_chapter.aside_section}}
          <button class=activate-aside-section>{{#i18n}}Seitenblöcke aktivieren{{/i18n}}</button>
        {{/active_chapter.aside_section}}
        {{#active_chapter.aside_section}}
            <button class=deactivate-aside-section data-type=Chapter>{{#i18n}}Seitenblöcke entfernen{{/i18n}}</button>
        {{/active_chapter.aside_section}}

        <a class="button export" href="{{#plugin_url}}export{{/plugin_url}}">
          {{#i18n}}Export{{/i18n}}
        </a>

        <a class="button import" href="{{#plugin_url}}import{{/plugin_url}}">
          {{#i18n}}Import{{/i18n}}
        </a>

        <a class="button settings" href="{{#plugin_url}}courseware/settings{{/plugin_url}}">
          {{#i18n}}Einstellungen{{/i18n}}
        </a>

      </li>
    </ol>
    {{#active_chapter}}
      {{#aside_section}}
        <section class="aside-section"
          data-blockid={{id}}
          data-parentid="{{parent_id}}"
          data-parenttype="Chapter"
          data-title="{{title}}"
          data-type="Section">

          <header>
            <h1>
              {{#i18n}}Sidebar für {{/i18n}}
                {{#titleize}}{{active_chapter.title}}{{/titleize}}
            </h1>
          </header>

          {{{html}}}
        </section>
      {{/aside_section}}
    {{/active_chapter}}

    {{#active_subchapter}}
      {{#aside_section}}
        <section class="aside-section"
          data-blockid={{id}}
          data-parentid="{{parent_id}}"
          data-parenttype="Subchapter"
          data-title="{{title}}"
          data-type="Section">

          <header>
            <h1>
              {{#i18n}}Sidebar für {{/i18n}}
                {{#titleize}}{{active_subchapter.title}}{{/titleize}}
            </h1>
          </header>

          {{{html}}}
        </section>
      {{/aside_section}}
    {{/active_subchapter}}
  </aside>
<button class="mobile-show-nav-button"></button>  
  {{#show_section_nav}}
    {{^sections_as_chapters}}
      {{> active_subchapter}}
    {{/sections_as_chapters}}
  {{/show_section_nav}}
  
  <div class=mode-switch>
      <button class="student" data-title="{{#i18n}}Studentenmodus{{/i18n}}"></button>
      <button class="author" data-title="{{#i18n}}Autorenmodus{{/i18n}}"></button>
  </div>
  
  {{#active_section}}
        {{> active_section}}
      {{/active_section}}

  <div class="clear"></div>
</section>
