{{^inactive}}
    <audio class="cw-audio-player">
        <source src="{{audio_file}}" type="audio/mpeg" />
    </audio>
    {{#audio_file}}
	
        {{#audio_access}}
            {{#audio_description}}<h1 class="cw-audio-description">{{audio_description}}</h1>{{/audio_description}}
            <div class="cw-audio-container">
                <div class="cw-audio-controls">
                    <div class="cw-audio-range" ></div>
                    <span class="cw-audio-time"></span>
                    <button name="stop" class="cw-audio-stopbutton"></button>
                    <button name="play" class="cw-audio-playbutton" played="{{audio_played}}"></button>
                </div>
            </div>
        {{/audio_access}}
	{{^audio_folder_warning}}
        {{^audio_access}}
          {{#isAuthor}}
            <div class="messagebox messagebox_info">
                {{#i18n}}Wegen des gewählten Lizenzstatus kann diese Audiodatei nicht abgespielt werden.{{/i18n}}
            </div>
	  {{/isAuthor}}
        {{/audio_access}}
	{{/audio_folder_warning}}
	{{#audio_folder_warning}}
            {{#isAuthor}}
                <div class="messagebox messagebox_info">
                     {{#i18n}}Die Audiodatei befindet sich in einem Ordner der möglicherweise die Wiedergabe für Teilnehmer*innen verhindert.{{/i18n}}
                </div>
            {{/isAuthor}}
	{{/audio_folder_warning}}
    {{/audio_file}}

    {{^audio_file}}
        {{#isAuthor}}
            <div class="messagebox messagebox_info">
                {{#i18n}}Es wurde keine Audiodatei ausgewählt{{/i18n}}
            </div>
        {{/isAuthor}}
    {{/audio_file}}
{{/inactive}}
{{#inactive}}
    <div class="messagebox messagebox_info">
        {{#i18n}}Dieser Block steht Ihnen erst zur Verfügung, sobald Sie die vorhergehenden Abschnitte erfolgreich abgeschlossen haben.{{/i18n}}
    </div>
{{/inactive}}
