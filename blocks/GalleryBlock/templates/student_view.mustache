{{^inactive}}
    <input type="hidden" name="gallery-autoplay" value="{{gallery_autoplay}}">
    <input type="hidden" name="gallery-autoplay-timer" value="{{gallery_autoplay_timer}}">
    <input type="hidden" name="gallery-hidenav" value="{{gallery_hidenav}}">
    <input type="hidden" name="gallery-height" value="{{gallery_height}}">
    <input type="hidden" name="gallery_show_names" value="{{gallery_show_names}}">
    <input type="hidden" name="gallery_has_files" value="{{galleryHasFiles}}">
    {{^noFolder}}
        <div class="cw-gallery" >
            {{#showFiles}}
                <div class="cw-gallery-image-wrapper">
                    <img class="cw-gallery-image" src="{{url}}">
                    {{#gallery_show_names}}<p class="cw-gallery-image-name">{{name}}</p>{{/gallery_show_names}}
                </div>
            {{/showFiles}}
        </div>
        {{#userIsAuthorized}}
            {{#folderIsPublic}}
                {{^galleryHasFiles}}
                    <div class="messagebox messagebox_info">
                        {{#i18n}}In dem ausgewählten Ordner befinden sich keine Bilder.{{/i18n}} 
                    </div>
                {{/galleryHasFiles}}
            {{/folderIsPublic}}
            {{^folderIsPublic}}
                <div class="messagebox messagebox_info">
                    {{#i18n}}Der ausgewählte Ordner ist zugriffsbeschränkt. Die Galerie wird nicht dargestellt.{{/i18n}} 
                </div>
            {{/folderIsPublic}}
        {{/userIsAuthorized}}
    {{/noFolder}}
    {{#noFolder}}
        {{#userIsAuthorized}}
                <div class="messagebox messagebox_info">
                    {{#i18n}}Es wurde kein Ordner ausgewählt.{{/i18n}} 
                </div>
        {{/userIsAuthorized}}
    {{/noFolder}}
{{/inactive}}
{{#inactive}}
    <div class="messagebox messagebox_info">
        {{#i18n}}Dieser Block steht Ihnen erst zur Verfügung, sobald Sie die vorhergehenden Abschnitte erfolgreich abgeschlossen haben.{{/i18n}}
    </div>
{{/inactive}}
