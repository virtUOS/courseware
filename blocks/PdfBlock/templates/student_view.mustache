<script src="{{courseware_path}}/blocks/PdfBlock/js/pdf.min.js"></script>
{{^inactive}}
{{#access}}
<div class="cw-pdf-wrapper">
    <div class="cw-pdf-header">
        <button class="cw-pdf-button-prev" title=""></button>
        <span class="cw-pdf-title">{{pdf_title}}</span> 
        {{^pdf_disable_download}}<a href="{{pdf_file}}" target="_blank"><button class="cw-pdf-download" title="Datei herunterladen"></button></a>{{/pdf_disable_download}}
        <span>(Seite: <span id="page_num" class="cw-pdf-page-num"></span> von <span id="page_count" class="cw-pdf-page-count"></span>)</span>
        <button class="cw-pdf-button-next" title="Seite 1"></button>
    </div>
    <canvas class="cw-pdf-canvas" style="border: solid thin #ccc; width: 100%;"></canvas>
    <input type="hidden" class="cw-pdf-file-url" value="{{pdf_file}}">
</div>
{{^pdf_file}}
     <div class="messagebox messagebox_info">
        {{#i18n}}Es wurde keine PDF-Datei ausgewählt.{{/i18n}}
    </div>
{{/pdf_file}}
{{/access}}
{{^access}}
     <div class="messagebox messagebox_info">
                {{#i18n}}Wegen des gewählten Lizenzstatus kann diese PDF-Datei nicht angezeigt werden.{{/i18n}}
    </div>
    <input type="hidden" class="cw-pdf-file-url" value="">
{{/access}}
{{/inactive}}
{{#inactive}}
    <div class="messagebox messagebox_info">
        {{#i18n}}Dieser Block steht Ihnen erst zur Verfügung, sobald Sie die vorhergehenden Abschnitte erfolgreich abgeschlossen haben.{{/i18n}}
    </div>
{{/inactive}}
