{{^inactive}}
    {{#download_title}}
        <h4 class="cw-download-title">{{download_title}}</h4>
    {{/download_title}}
    {{#confirmed}}
        {{#download_success}}
            <div class="messagebox messagebox_success">
                {{download_success}}
            </div>
            <br>
        {{/download_success}}
    {{/confirmed}}
    
    {{^confirmed}}
        {{#download_info}}
            <div class="messagebox messagebox_info">
                {{download_info}}
            </div>
            <br>
        {{/download_info}}
    {{/confirmed}}
    {{#file}}
        {{#download_access}}
            <div class="download-file">
                <div class="cw-download-info" > &nbsp; {{file}} &nbsp; <span>{{file_name}}</span></div>
                 <div class="cw-download-button-wrapper">
                    <a href="../../sendfile.php?force_download=1&type={{#url}}6{{/url}}{{^url}}0{{/url}}&file_id={{file_id}}&file_name={{file_name}}" target="_blank"> 
                        <button name="download" class="cw-download-button" style="display: inline-block;">download</button>
                    </a> 
                </div>
            </div>
        {{/download_access}}
        {{^download_access}}
            <div class="messagebox messagebox_info">
                {{#i18n}}Wegen des gewählten Lizenzstatus können Sie diese Datei nicht herunterladen.{{/i18n}}
            </div>
        {{/download_access}}
    {{/file}}
    {{^file}}{{#i18n}}Es wurde keine Datei ausw&auml;hlt{{/i18n}}{{/file}}
    <input type="hidden" name="file" value="{{file}}" />
    <input type="hidden" name="file_name" value="{{file_name}}" />
    <input type="hidden" name="file_id" value="{{file_id}}" />
    <input type="hidden" name="download_title" value="{{download_title}}" />
    <input type="hidden" name="download_info" value="{{download_info}}" />
    <input type="hidden" name="download_success" value="{{download_success}}" />
    <input type="hidden" name="download_access" value="{{download_access}}" />
{{/inactive}}
{{#inactive}}
    <div class="messagebox messagebox_info">
        {{#i18n}}Dieser Block steht Ihnen erst zur Verfügung, sobald Sie die vorhergehenden Abschnitte erfolgreich abgeschloßen haben.{{/i18n}}
    </div>
{{/inactive}}
