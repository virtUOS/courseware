{{^installed}}
    {{> _vips_not_installed}}
{{/installed}}

{{#installed}}
    {{#active}}{{#version}}
        {{#unsupported_question}}
            <div class="messagebox messagebox_error">
                {{#i18n}}Im aktuellen Aufgabenblatt sind nicht unterstützte Aufgabentypen enthalten!{{/i18n}}
            </div>
        {{/unsupported_question}}
        {{#has_assignments}}
            <label for="assignment_id">{{#i18n}}Aufgabenblatt{{/i18n}}:</label>
            <select name="assignment_id">
                {{#assignments}}
                      <option value="{{id}}"{{#current_assignment}} selected="selected"{{/current_assignment}}>
                        {{name}} ({{#created}}{{#i18n}}erstellt am{{/i18n}} {{created}}, {{/created}}{{exercises_count}} {{#i18n}}Fragen{{/i18n}})
                      </option>
                {{/assignments}}
            </select>
            <div class="cw-button-box">
                <a href="{{manage_tests_url}}" class="button">{{#i18n}}Aufgabenblätter verwalten{{/i18n}}</a>
                <button name="save" class="button">Speichern</button>
                <button name="cancel" class="button">Abbrechen</button>
            </div>
        {{/has_assignments}}
        {{^has_assignments}}
            <div class="messagebox messagebox_error">
                {{#i18n}}Es sind keine Aufgabenblätter des Types "{{type}}" vorhanden.{{/i18n}}
            </div>
        {{/has_assignments}}
    {{/version}}
    {{^version}}
        <div class="messagebox messagebox_error">{{#i18n}}Die installierte Version von Vips ist veraltet. Bitte wenden Sie sich an Ihren Administrator.{{/i18n}}</div>
        <div class="cw-button-box">
            <button name="cancel" class="button">Abbrechen</button>
        </div>
    {{/version}}
    {{/active}}
    
    {{^active}}
        {{> _vips_deactivated}}
        <div class="cw-button-box">
            <button name="cancel" class="button">Abbrechen</button>
        </div>
    {{/active}}
{{/installed}}
