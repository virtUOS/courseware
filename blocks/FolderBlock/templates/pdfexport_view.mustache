{{#folder_available}}
<table cellspacing="4">
  <tr>
    <td style="font-weight: bold;">{{#i18n}}Titel des Blocks{{/i18n}}</td>
    <td>{{folder_title}}{{^folder_title}}–{{/folder_title}}</td>
  </tr>
  <tr>
    <td style="font-weight: bold;">{{#i18n}}Name des Dateiordners{{/i18n}}</td>
    <td>{{folder_name}}{{^folder_name}}–{{/folder_name}}</td>
  </tr>
  <tr>
    <td style="font-weight: bold;">{{#i18n}}URL des Dateiordners{{/i18n}}</td>
    <td>
      {{#folder_link}}
        <a href="{{folder_link}}">{{folder_link}}</a>
      {{/folder_link}}
      {{^folder_link}}–{{/folder_link}}
    </td>
  </tr>
</table>
{{/folder_available}}
{{^folder_available}}
  <p>{{#i18n}}Es wurde kein Ordner ausgewählt.{{/i18n}}</p>
{{/folder_available}}
