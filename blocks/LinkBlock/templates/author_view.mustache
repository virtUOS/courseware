<input type="hidden" class="cw-link-stored-type" value="{{link_type}}">
<input type="hidden" class="cw-link-stored-target" value="{{link_target}}">
<input type="hidden" class="cw-link-stored-title" value="{{link_title}}">
<input type="hidden" class="cw-link-stored-progress" value="{{link_show_progress}}">

<label for="cw-link-type">{{#i18n}}Art des Links{{/i18n}}:</label>
<select name="cw-link-type" class="cw-link-type">
    {{#hasinternal}}<option value="internal">{{#i18n}}interner Link{{/i18n}}</option>{{/hasinternal}}
    <option value="external">{{#i18n}}externer Link{{/i18n}}</option>
</select>
<br>

<label for="cw-link-target">{{#i18n}}Ziel des Links{{/i18n}}:</label>
<select name="cw-link-target" class="cw-link-target">
    <optgroup label="{{#i18n}}Schnellauswahl{{/i18n}}">
        {{#hasnext}}
            <option value="next">{{#i18n}}n√§chster Abschnitt{{/i18n}}</option>
        {{/hasnext}}
        {{#hasprev}}
            <option value="prev">{{#i18n}}vorheriger Abschnitt{{/i18n}}</option>
        {{/hasprev}}
    </optgroup>
    <optgroup label="{{#i18n}}in diesem Kapitel{{/i18n}}">
        {{#inthischapter}}
            <option value="{{value}}">{{title}}</option>
        {{/inthischapter}}
    </optgroup>
    <optgroup label="{{#i18n}}in anderen Kapiteln{{/i18n}}">
        {{#inotherchapters}}
            <option value="{{value}}">{{title}}</option>
        {{/inotherchapters}}
    </optgroup>
</select>
<select name="cw-link-protocol" class="cw-link-protocol">
    <option value="http://">http://</option>
    <option value="https://">https://</option>
</select>
<input name="cw-link-target" class="cw-link-target" type="text" placeholder="www.studip.de">
<br>

<label for="cw-link-title">{{#i18n}}Bezeichung des Links{{/i18n}}:</label>
<input type="text" name="cw-link-title" class="cw-link-title" spellcheck="true">
<br>

<label for="cw-link-progress" class="cw-link-progress-label">{{#i18n}}Nutzerfortschritt anzeigen{{/i18n}}:</label>
<select name="cw-link-progress" class="cw-link-progress">
    <option value="false">{{#i18n}}nein{{/i18n}}</option>
    <option value="true">{{#i18n}}ja{{/i18n}}</option>
</select>

<div class="cw-button-box">
    <button name="save" class="button">{{#i18n}}Speichern{{/i18n}}</button>
    <button name="cancel" class="button">{{#i18n}}Abbrechen{{/i18n}}</button>
</div>
