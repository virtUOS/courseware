{{^inactive}}
    {{#link_id}}
        <a href="{{#plugin_url}}courseware?selected={{link_id}}{{/plugin_url}}">
            <div class="cw-link internal">
                <span class="cw-link-title">{{link_title}}</span>
                {{#link_show_progress}}
                    {{#progress}}
                        <div class="cw-link-progress-true"></div>
                    {{/progress}}
                    {{^progress}}
                        <div class="cw-link-progress-false"></div>
                    {{/progress}}
                {{/link_show_progress}}
            </div>
        </a>
    {{/link_id}}

    {{#link_href}}
        <a href="{{link_href}}" target="_blank">
            <div class="cw-link external">
                {{^open_graph}}
                <span class="cw-link-title">{{link_title}}</span>
                {{/open_graph}}
                {{#open_graph}}
                    <img src={{image}} class="cw-link-og-image">
                    <div class="cw-link-og-textwrapper">
                        <p class="cw-link-og-site">{{site_name}}</p>
                        <p class="cw-link-og-title">{{title}}</p>
                        <p class="cw-link-og-description">{{description}}</p>
                    </div>
                {{/open_graph}}
            </div>
        </a>
    {{/link_href}}
{{/inactive}}
{{#inactive}}
    <div class="messagebox messagebox_info">
        {{#i18n}}Dieser Block steht Ihnen erst zur Verfügung, sobald Sie die vorhergehenden Abschnitte erfolgreich abgeschloßen haben.{{/i18n}}
    </div>
{{/inactive}}
